{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "next/babel"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "multiline-ternary": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": 0,
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
